<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %><br />
    <% if @register %>
      <%= f.password_field :password %>
    <% else %>
      <%= f.text_field :password %>
    <% end %>
  </p>
    <!--
  <p>
    <%= f.label :emails_alert %><br />
    <%= f.text_area :emails_alert %>
  </p>
  <p>
    <%= f.label :emails_critical %><br />
    <%= f.text_area :emails_critical %>
    </p> -->
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
